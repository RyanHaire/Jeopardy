<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Assignment2-Jeopardy</display-name>
  <welcome-file-list>
    <welcome-file>login-page.html</welcome-file>
  </welcome-file-list>
  <!-- PickQuestionServlet -->
  <servlet>
    <servlet-name>questionServlet</servlet-name>
    <servlet-class>com.prog32758.PickQuestionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>questionServlet</servlet-name>
    <url-pattern>/question</url-pattern>
  </servlet-mapping>
  
  <!-- LoginServlet -->
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.prog32758.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- AnswerSelectServlet -->
  <servlet>
    <servlet-name>answerServlet</servlet-name>
    <servlet-class>com.prog32758.AnswerSelectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>answerServlet</servlet-name>
    <url-pattern>/answer</url-pattern>
  </servlet-mapping>
</web-app>